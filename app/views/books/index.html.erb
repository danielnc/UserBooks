<h1>Listing books</h1>
<table class="table table-striped">
  <tr>
    <th>Title</th>
    <th>Isbn</th>
    <th></th>
    <th></th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= link_to book.title, book %></td>
      <td><%= link_to book.isbn, book %></td>
      <td><%= link_to 'Edit', edit_book_path(book), class: "btn btn-inverse btn-mini" %></td>
      <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-mini" %></td>
    </tr>
  <% end %>
</table>
<br />
<%= link_to 'Read Book', new_book_path, class: "btn btn-mini" %>
